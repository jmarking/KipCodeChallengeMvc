@model KipCodeChallengeMvc.Models.PersonModel

@{
    ViewData["Title"] = "Person Edit";
}

<form asp-action="Edit" class="col s12">
    <div id="edit-main" class="row">
        <div class="row">
            <div class="input-field col s12 m6">
                <input asp-for="FirstName" type="text" class="validate">
                <label asp-for="FirstName">First Name</label>
            </div>
            <div class="input-field col s12 m6">
                <input asp-for="LastName" type="text" class="validate">
                <label asp-for="LastName">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Email" type="email" class="validate">
                <label asp-for="Email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="DateOfBirth" type="text" class="datepicker">
                <label asp-for="DateOfBirth">Date of Birth</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s7 m4 l3 push-s5 push-m8 push-l9" style="text-align:right">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/scripts/materialize.js"></script>
}